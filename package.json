{
    "name": "smash-nab-demo",
    "version": "0.0.0-alpha",
    "description": "Smash Neighborhood Admin Bot Demo",
    "type": "module",
    "main": "dist/src/index.js",
    "scripts": {
        "dev": "nodemon --watch 'src/**/*.ts' --exec 'node -r dotenv/config --loader ts-node/esm' src/index.ts",
        "start": "node -r dotenv/config .",
        "prepare": "[ -n \"$CI\" ] || npm run prepare:husky",
        "prepare:husky": "husky",
        "postinstall": "[ \"$NODE_ENV\" = \"production\" ] || patch-package",
        "test:ci": "jest --config ./jest.ci-config.cjs",
        "test": "jest --config ./jest.config.cjs",
        "test:coverage": "npm run test -- --coverage",
        "test:watch": "npm run test -- --watchAll",
        "eslint": "eslint src/**/*.ts scripts/**/*.ts tests/**/*.ts",
        "prettier": "prettier --config .prettierrc 'src/**/*.ts' 'scripts/**/*.ts' 'tests/**/*.ts'",
        "prettier:check": "npm run prettier -- --check",
        "prettier:format": "npm run prettier -- --write",
        "code:checks": "npm run eslint && npm run prettier:check",
        "build": "rm -rf dist/* && tsc -p tsconfig.build.json && tsc-alias",
        "eslint-dist:check": "eslint dist/**/*.js",
        "circular-dependencies:check": "madge --circular dist/",
        "build:checks": "npm run code:checks && npm run build && npm run eslint-dist:check && npm run circular-dependencies:check",
        "build:start": "npm run build:checks && npm run start",
        "script/auto": "tsx ./scripts/automated-client.ts",
        "script/client": "tsx ./scripts/client.ts",
        "script/json": "tsx ./scripts/create-identity.ts",
        "script/id": "tsx ./scripts/generate-identity-hsm.ts",
        "script/sign": "tsx ./scripts/test-sign.ts",
        "create-id": "npm run --silent script/json 0 1 0 > ./out/identity-exported.json",
        "generate-id": "mkdir -p config && npm run --silent script/id 0 1 0 > ./config/identity.json",
        "lint-staged": "lint-staged",
        "docker:build:softhsm": "docker build -t softhsmv2 -f softhsmv2/Dockerfile softhsmv2",
        "docker:test:softhsm": "npm run docker:build:softhsm && docker build -f softhsmv2/Dockerfile.test softhsmv2",
        "docker:build:nab": "npm run docker:build:softhsm && docker build -t nab -f Dockerfile ."
    },
    "lint-staged": {
        "*.ts": "npm run prettier:format"
    },
    "keywords": [],
    "author": "",
    "license": "MIT",
    "dependencies": {
        "cytoscape": "^3.29.2",
        "express": "^4.19.2",
        "graphene-pk11": "^2.3.6",
        "node-webcrypto-p11": "^2.6.6",
        "smash-node-lib": "./smash-node-lib/"
    },
    "devDependencies": {
        "@eslint/js": "^9.9.1",
        "@trivago/prettier-plugin-sort-imports": "^4.3.0",
        "@types/cytoscape": "^3.21.2",
        "@types/express": "^4.17.21",
        "@types/jest": "^29.5.13",
        "dotenv": "^16.4.5",
        "eslint": "^9.9.1",
        "husky": "^9.1.7",
        "jest": "^29.7.0",
        "lint-staged": "^15.2.11",
        "madge": "^8.0.0",
        "nodemon": "^3.1.7",
        "patch-package": "^8.0.0",
        "prettier": "^3.3.3",
        "ts-jest": "^29.2.5",
        "tsc-alias": "^1.8.10",
        "tsx": "^4.19.1",
        "typescript": "^5.7.2",
        "typescript-eslint": "^8.16.0"
    }
}
